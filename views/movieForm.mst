{{> messages }}

<form action="" method="post">
    <p>
        <label for="title">Title:</label>
        <input name="title" id="title" type="text" size="50" value="{{ movie.title }}">
    </p>
    <p>
        <label for="yearReleased">Year Released:</label>
        <input name="yearReleased" id="yearReleased" type="text"
            size="4" minlength="4" maxlength="4" value="{{ movie.yearReleased }}">
    </p>
    <p><input type="submit" value="{{ submitBtnText }}" /></p>
</form>